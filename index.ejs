<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NodeJS ESAMC</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1><%= title %></h1>
        <a href='/add' class="btn btn-sm btn-primary">Adicionar Usu√°rio</a><br></br>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>CPF</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(function(user){ %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.nome %></td>
                        <td><%= user.email %></td>
                        <td><%= user.cpf %></td>
                        <td>
                            <a href="edit/<%= user.id %>" class="btn btn-sm btn-primary">Editar</a>
                            <a href="delete/<%= user.id %>" class="btn btn-sm btn-danger">Deletar</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>